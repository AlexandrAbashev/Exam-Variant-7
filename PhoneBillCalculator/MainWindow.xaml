<Window
    x:Class="PhoneBillCalculator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Калькулятор стоимости телефонных разговоров"
    Width="500"
    Height="620"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Height" Value="25" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10,5" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Width" Value="180" />
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="Margin" Value="5" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="10,5" />
            <Setter Property="Padding" Value="10" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="10,10,10,20"
            HorizontalAlignment="Center"
            FontSize="16"
            FontWeight="Bold"
            Text="Калькулятор стоимости телефонных разговоров" />

        <GroupBox Grid.Row="1" Header="Выбор тарифа">
            <StackPanel>
                <RadioButton
                    x:Name="rbTariff1"
                    Content="Тариф 1: до 200 минут - 0.7 руб/мин, свыше - 1.6 руб/мин"
                    GroupName="Tariff"
                    IsChecked="True" />
                <RadioButton
                    x:Name="rbTariff2"
                    Content="Тариф 2: до 100 минут - 0.3 руб/мин, свыше - 1.6 руб/мин"
                    GroupName="Tariff" />
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="Данные для расчета">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Text="Количество минут:" />
                <TextBox
                    x:Name="txtMinutes"
                    Grid.Row="0"
                    Grid.Column="1" />

                <Button
                    x:Name="btnCalculate"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5,10,5,0"
                    HorizontalAlignment="Right"
                    Click="btnCalculate_Click"
                    Content="Рассчитать стоимость" />
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="3" Header="Результаты расчета">
            <StackPanel>
                <TextBlock
                    x:Name="txtResult"
                    FontWeight="Bold"
                    Foreground="Blue"
                    Text="Введите данные для расчета" />
                <TextBlock x:Name="txtExtraMinutes" Text="" />
            </StackPanel>
        </GroupBox>
        <GroupBox Grid.Row="4" Header="Данные плательщика">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Text="Ф.И.О. плательщика:" />
                <TextBox
                    x:Name="txtCustomerName"
                    Grid.Row="0"
                    Grid.Column="1" />

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Text="Адрес плательщика:" />
                <TextBox
                    x:Name="txtCustomerAddress"
                    Grid.Row="1"
                    Grid.Column="1" />
            </Grid>
        </GroupBox>

        <StackPanel
            Grid.Row="6"
            Margin="0,10"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                x:Name="btnGenerateReceipt"
                Click="btnGenerateReceipt_Click"
                Content="Сформировать квитанцию"
                IsEnabled="False" />
        </StackPanel>
    </Grid>
</Window>